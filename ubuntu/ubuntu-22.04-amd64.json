{
    "builders": [
        {
            "boot_command": [
                " <wait>",
                " <wait>",
                " <wait>",
                " <wait>",
                " <wait>",
                "c",
                "<wait>",
                "set gfxpayload=keep",
                "<enter><wait>",
                "linux /casper/vmlinuz quiet<wait>",
                " autoinstall<wait>",
                " ds=nocloud-net<wait>",
                "\\;s=http://<wait>",
                "{{.HTTPIP}}<wait>",
                ":{{.HTTPPort}}/<wait>",
                " ---",
                "<enter><wait>",
                "initrd /casper/initrd<wait>",
                "<enter><wait>",
                "boot<enter><wait>"
            ],
            "boot_wait": "5s",
            "cpus": "{{ user `cpus` }}",
            "disk_size": "{{user `disk_size`}}",
            "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
            "guest_additions_url": "{{ user `guest_additions_url` }}",
            "virtualbox_version_file": ".vbox_version",
            "guest_os_type": "Ubuntu_64",
            "hard_drive_interface": "sata",
            "headless": "{{ user `headless` }}",
            "http_directory": "{{user `http_directory`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_url": "{{user `mirror`}}/{{user `mirror_directory`}}/{{user `iso_name`}}",
            "memory": "{{ user `memory` }}",
            "output_directory": "{{ user `build_directory` }}/packer-{{user `template`}}-virtualbox",
            "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
            "ssh_password": "vagrant",
            "ssh_port": 22,
            "ssh_timeout": "10000s",
            "ssh_username": "vagrant",
            "type": "virtualbox-iso",
            "vm_name": "{{ user `template` }}"
        }
    ],
    "post-processors": [
        [
            {
                "output": "{{ user `build_directory` }}/{{user `box_basename`}}.{{.Provider}}.box",
                "type": "vagrant"
            }, 
            {
                "type": "vagrant-cloud",
                "box_tag": "baixiaoxi/ubuntu2204",
                "access_token": "{{ user `cloud_token` }}",
                "version": "{{ user `version` }}"
            }
        ]
    ],
    "provisioners": [
        {
            "type": "shell",
            "environment_vars": [
                "HOME_DIR=/home/vagrant",
                "http_proxy={{user `http_proxy`}}",
                "https_proxy={{user `https_proxy`}}",
                "no_proxy={{user `no_proxy`}}"
            ],
            "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
            "expect_disconnect": true,
            "scripts": [
                "{{template_dir}}/scripts/mirror.sh",
                "{{template_dir}}/scripts/ansible.sh",
                "{{template_dir}}/scripts/update.sh",
                "{{template_dir}}/../_common/motd.sh",
                "{{template_dir}}/../_common/sshd.sh",
                "{{template_dir}}/scripts/networking.sh",
                "{{template_dir}}/scripts/sudoers.sh",
                "{{template_dir}}/../_common/parallels.sh"
            ]
        },
        {
            "type": "ansible-local",
            "playbook_file": "../shared/main.yml",
            "role_paths": ["../roles/geerlingguy.nfs", "../roles/geerlingguy.packer_rhel", "../roles/geerlingguy.packer-debian"]
        },
        {
            "type": "shell",
            "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E sh -eux '{{.Path}}'",
            "expect_disconnect": true,
            "scripts": [
                "{{template_dir}}/scripts/cleanup.sh",
                "{{template_dir}}/../_common/minimize.sh"
            ]
          }
    ],
    "variables": {
        "box_basename": "ubuntu-22.04",
        "build_directory": "./build",
        "build_timestamp": "{{isotime \"20060102150405\"}}",
        "cpus": "4",
        "disk_size": "65536",
        "git_revision": "__unknown_git_revision__",
        "guest_additions_url": "",
        "headless": "true",
        "http_directory": "{{template_dir}}/http",
        "http_proxy": "{{env `http_proxy`}}",
        "https_proxy": "{{env `https_proxy`}}",
        "no_proxy": "{{env `no_proxy`}}",
        "cloud_token": "{{ env `VAGRANT_CLOUD_TOKEN` }}",
        "hyperv_generation": "2",
        "hyperv_switch": "bento",
        "iso_checksum": "84aeaf7823c8c61baa0ae862d0a06b03409394800000b3235854a6b38eb4856f",
        "iso_name": "ubuntu-22.04-live-server-amd64.iso",
        "memory": "4096",
        "mirror": "http://releases.ubuntu.com",
        "mirror_directory": "jammy",
        "name": "ubuntu-22.04",
        "preseed_path": "preseed.cfg",
        "qemu_display": "none",
        "template": "ubuntu-22.04-amd64",
        "version": "1.0.0"
    }
}
